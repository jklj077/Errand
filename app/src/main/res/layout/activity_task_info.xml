<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.errand.errand.task_info"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/task_list"
        android:minWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#91dadf"
        android:clickable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/task_info"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <TextView
            android:drawableLeft="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:drawableLeft="@drawable/confirm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/confirm"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/task_info_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/task_list"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求帮忙拿快递！！！"
            android:id="@+id/info_short"
            android:textColor="#707070"
            android:textSize="18sp"
            android:layout_weight="0.94"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待领取"
            android:textSize="18sp"
            android:textColor="#c0c0c0"
            android:id="@+id/status" />
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide_bar"
        android:layout_below="@id/task_info_1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_tab_bar1"
        android:layout_alignParentLeft="true"
        android:id="@+id/info1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.05">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pos"
                android:id="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pos"
                android:id="@+id/imageView6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="快递自提点"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/pos1"
                android:layout_gravity="left|bottom|center_horizontal"
                android:gravity="center"
                android:layout_weight="0.3"
                android:editable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="农园"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/pos2"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:editable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00-18:00"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/time1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00-18:00"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/time2"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="0.3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拿快递"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/aaction1"
                android:gravity="center_vertical|right"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拿快递"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/action2"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide_bar"
        android:layout_below="@id/info1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成者"
        android:id="@+id/user_status1"
        android:layout_below="@+id/div_tab_bar2"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_status1"
        android:id="@+id/user_status"
        android:layout_alignParentLeft="true"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/user_list" />
    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide_bar"
        android:layout_below="@+id/user_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="酬劳"
        android:id="@+id/pay1"
        android:layout_below="@+id/div_tab_bar3"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay1"
        android:id="@+id/pay2"
        android:layout_alignParentLeft="true"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 RMB"
            android:id="@+id/paynum"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide_bar"
        android:layout_below="@id/pay2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细说明"
        android:id="@+id/detail1"
        android:layout_below="@+id/div_tab_bar4"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/detail1"
        android:id="@+id/detail2"
        android:layout_alignParentLeft="true"
        android:fillViewport="false"
        android:focusableInTouchMode="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail3"
            android:enabled="false" />
    </ScrollView>

    <View
        android:id="@+id/div_tab_bar5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide_bar"
        android:layout_below="@id/detail2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价"
        android:id="@+id/judge1"
        android:layout_below="@+id/div_tab_bar5"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/judge1"
        android:id="@+id/judge2"
        android:layout_alignParentLeft="true"
        android:fillViewport="false" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/judge3" />
    </ScrollView>



</RelativeLayout>
